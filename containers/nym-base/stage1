FROM centos:centos8.3.2011

ENV PATH=/root/.cargo/bin

RUN /bin/bash -c "dnf -y install epel-release jq pkgconf git gcc gcc-c++ openssl-devel && \
    dnf -y groupinstall Development\ Tools
    dnf -y clean all && \
    rm -rf /var/cache/yum"

RUN /bin/bash -c "curl --proto '=https' --tlsv1.2 https://sh.rustup.rs -sSf | sh -s -- -y && \
    rustup -y update"
